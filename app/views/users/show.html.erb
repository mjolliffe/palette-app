<% provide(:title, @user.name) %>
<h1><%= current_user.name.downcase %>'s palette</h1>
<div class="row">
  <div class="col-md-12 users">
    <div class="thumbnail">
      <img <%= gravatar_for @user %>
      <div class="caption">
        <h5><%= @user.name %></h5>
        <h5><%= @user.description %></h5>
        <h5>Mixing since <%= @user.created_at.strftime("%m/%d/%Y") %></h5>
        <h5>Based out of <%= @user.zip_code%></h5>
      </div>
    </div>
  </div>
</div>


<% if current_user.id == @user.id %>

<%= render 'users/myclasses'%>

<h3><%= link_to "create a class", addcourses_path%></h3>

<% end %>


<%= form_tag(user_path, method: "get") do %>
    <%= submit_tag "Prev", "class" => "btn btn-primary" %>
    <%= submit_tag "Next", "class" => "btn btn-primary" %>
<% end %>
