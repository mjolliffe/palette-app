<% provide(:title, 'Sign Up') %>
<% @user = User.new %>
<%= form_for @user do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :name, "Full Name" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :zip_code, "Zip Code" %>
  <%= f.number_field :zip_code, class: 'form-control' %>

  <%= f.label :description, "A bit about yourself..." %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Retype Password" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit "create account", class: "btn btn-primary", id: "btn-submit" %>
<% end %>
