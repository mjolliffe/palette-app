<% provide(:title, "Edit Profile") %>
<h1>update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :zip_code, "Zip Code" %>
      <%= f.number_field :zip_code, class: 'form-control' %>

      <%= f.label :description, "Profession" %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Retype Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Change Profile Picture</a>
    </div>

    <%= f.submit "save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
