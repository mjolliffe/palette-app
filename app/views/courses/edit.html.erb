<% provide(:title, "Edit Class") %>
<h1>update class information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>

      <%= f.label :name, "Class Name" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :instructor %>
      <%= f.text_field :instructor, class: 'form-control' %>

      <%= f.label :street_address %>
      <%= f.text_field :street_address, class: 'form-control' %>

      <%= f.label :zip_code %>
      <%= f.number_field :zip_code, class: 'form-control' %>

      <%= f.label :course_image_url, "Class Image (URL)" %>
      <%= f.url_field :course_image_url, class: 'form-control' %>

      <%= f.label :sessions_per_course, "Number of Sessions" %>
      <%= f.text_field :sessions_per_course, class: 'form-control' %>

      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: 'form-control' %>

      <%= f.label :end_date %>
      <%= f.date_field :end_date, class: 'form-control' %>

      <%= f.label :start_time %>
      <%= f.text_field :start_time, class: 'form-control' %>

      <%= f.label :end_time %>
      <%= f.text_field :end_time, class: 'form-control' %>

      <%= f.label :course_day_of_week, "Class Held On (Day of Week)" %>
      <%= f.text_field :course_day_of_week, class: 'form-control' %>

      <%= f.label :description, "Class Description" %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.number_field :price, :class => 'price', :value => (number_to_currency(f.object.price, :precision => 2) || 0) %>

    <%= f.submit "save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
