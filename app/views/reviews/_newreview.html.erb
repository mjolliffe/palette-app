<% provide(:title, 'Add Review') %>
<% @review = Review.new %>

<h1>add a review</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @review, :url => course_reviews_path(@course.id) do |f|%>

      <%= f.label :content, "Review" %>
      <%= f.text_field :content, :placeholder => "Write your review here.", class: 'form-control' %>

      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :course_id, :value => @course.id %>

      <%= f.submit "add review", class: "btn btn-primary", id: "btn-submit" %>
    <% end %>
  </div>
</div>
